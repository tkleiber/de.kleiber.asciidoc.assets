                      <groupId>org.asciidoctor</groupId>
                      <artifactId>asciidoctorj-screenshot</artifactId>
                      <version>0.3.0</version>
                      <packaging>jar</packaging>
                  </configuration>
              </execution>
          </executions>
      </plugin-->

    </plugins>
  </build>

</project>